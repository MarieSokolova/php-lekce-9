{% extends 'base.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}
<div class="row">
<div class="col-md-6">
    <h1>Create new Category</h1>
    {{ form_start(form) }}
{{ form_row(form.name) }}
{{ form_row(form.description) }}
{{ form_row(form.url) }}
{{ form_row(form.priority) }}
{{ form_row(form.visible) }}
